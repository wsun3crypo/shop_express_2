<%= search_form_for @q, :class => collapse_search_form, :id => "coupons_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :expiry_date, "Expiry date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='expiry_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :expiry_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Expiry date greater than or equal to", :data => {:target => '#expiry_dategteqPicker'} %>
          <div class="input-group-append" data-target='#expiry_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='expiry_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :expiry_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Expiry date less than or equal to", :data => {:target => '#expiry_datelteqPicker'} %>
          <div class="input-group-append" data-target='#expiry_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#expiry_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#expiry_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#expiry_dategteqPicker').on("dp.change", function (e) {
              $('#expiry_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#expiry_datelteqPicker').on("dp.change", function (e) {
              $('#expiry_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :amount_gteq, :class => "form-control", :placeholder => "Amount greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :amount_lteq, :class => "form-control", :placeholder => "Amount less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Merchant Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='merchantsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :merchants_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Merchant Created at greater than or equal to", :data => {:target => '#merchantsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#merchantsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='merchantslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :merchants_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Merchant Created at less than or equal to", :data => {:target => '#merchantslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#merchantslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#merchantsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#merchantslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#merchantsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#merchantslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#merchantslteqcreated_atPicker').on("dp.change", function (e) {
              $('#merchantsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/coupons" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

