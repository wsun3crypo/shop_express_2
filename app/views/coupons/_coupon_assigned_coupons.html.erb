<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Assigned Coupons

    <a data-toggle="collapse" href="#coupon_assigned_coupons_new_form">
      Add assigned coupon
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @coupon.assigned_coupons.each do |assigned_coupon| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to assigned_coupon, assigned_coupon %>

        <%= link_to assigned_coupon, method: :delete, data: { confirm: "Do you really want to delete this assigned_coupon" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="coupon_assigned_coupons_new_form">
        <%= render partial: "coupons/coupon_assigned_coupons_new_form" %>
      </div>
    </div>

  </ul>
</div>
