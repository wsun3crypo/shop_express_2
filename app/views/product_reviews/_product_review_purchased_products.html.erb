<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Purchased Products

    <a data-toggle="collapse" href="#product_review_purchased_products_new_form">
      Add purchased product
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @product_review.purchased_products.each do |purchased_product| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to purchased_product, purchased_product %>

        <%= link_to purchased_product, method: :delete, data: { confirm: "Do you really want to delete this purchased_product" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="product_review_purchased_products_new_form">
        <%= render partial: "product_reviews/product_review_purchased_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
