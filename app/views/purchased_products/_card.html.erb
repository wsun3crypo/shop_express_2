<div class="card mb-3">
  <h2 class="card-header h4">
    Purchased Product #<%= purchased_product.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Products</dt>
      <dd>
        <% if @purchased_product.products.present? %>
          <%= link_to purchased_product.products, purchased_product.products %>
        <% end %>
      </dd>

      <dt>Coupons</dt>
      <dd>
        <% if @purchased_product.coupons.present? %>
          <%= link_to purchased_product.coupons, purchased_product.coupons %>
        <% end %>
      </dd>

      <dt>Customers</dt>
      <dd>
        <% if @purchased_product.customers.present? %>
          <%= link_to purchased_product.customers, purchased_product.customers %>
        <% end %>
      </dd>

      <dt>Quantity</dt>
      <dd><%= purchased_product.quantity %></dd>

      <dt>Loyaltyprogram</dt>
      <dd>
        <% if @purchased_product.loyaltyprogram.present? %>
          <%= link_to purchased_product.loyaltyprogram, purchased_product.loyaltyprogram %>
        <% end %>
      </dd>

      <dt>Productsreview</dt>
      <dd>
        <% if @purchased_product.productsreview.present? %>
          <%= link_to purchased_product.productsreview, purchased_product.productsreview %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back purchased_product, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_purchased_product_url(purchased_product), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to purchased_product, method: :delete, data: { confirm: "Do you really want to delete this purchased_product?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(purchased_product.updated_at) %> ago
  </div>
</div>
