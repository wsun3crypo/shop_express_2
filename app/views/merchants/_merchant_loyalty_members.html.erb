<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Loyalty Members

    <a data-toggle="collapse" href="#merchant_loyalty_members_new_form">
      Add loyalty program
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @merchant.loyalty_members.each do |loyalty_program| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to loyalty_program, loyalty_program %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="merchant_loyalty_members_new_form">
        <%= render partial: "merchants/merchant_loyalty_members_new_form" %>
      </div>
    </div>

  </ul>
</div>
