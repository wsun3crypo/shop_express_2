<div class="card mb-3">
  <h2 class="card-header h4">
    Merchant #<%= merchant.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= merchant.name %></dd>

      <dt>Description</dt>
      <dd><%= merchant.description %></dd>

      <dt>Address</dt>
      <dd><%= merchant.address %></dd>

      <dt>Tel</dt>
      <dd><%= merchant.tel %></dd>

      <dt>Picture</dt>
      <dd>
        <div>
          <%= render partial: "merchants/one_photo_map" %>
        </div>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back merchant, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_merchant_url(merchant), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to merchant, method: :delete, data: { confirm: "Do you really want to delete this merchant?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(merchant.updated_at) %> ago
  </div>
</div>
