<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <div class="form-group">
            <% name_was_invalid = resource.errors.include?(:name) %>

            <% name_class = "form-control" %>

            <% if was_validated %>
              <% if name_was_invalid %>
                <% name_class << " is-invalid" %>
              <% else %>
                <% name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :name %>

            <%= f.text_field :name, :class => name_class, :placeholder => "Enter name" %>

            <% if name_was_invalid %>
              <% resource.errors.full_messages_for(:name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% description_was_invalid = resource.errors.include?(:description) %>

            <% description_class = "form-control" %>

            <% if was_validated %>
              <% if description_was_invalid %>
                <% description_class << " is-invalid" %>
              <% else %>
                <% description_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :description %>

            <%= f.text_field :description, :class => description_class, :placeholder => "Enter description" %>

            <% if description_was_invalid %>
              <% resource.errors.full_messages_for(:description).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% address_was_invalid = resource.errors.include?(:address) %>

            <% address_class = "form-control" %>

            <% if was_validated %>
              <% if address_was_invalid %>
                <% address_class << " is-invalid" %>
              <% else %>
                <% address_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :address %>

            <%= f.number_field :address, :class => address_class, :placeholder => "Enter address" %>

            <% if address_was_invalid %>
              <% resource.errors.full_messages_for(:address).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% tel_was_invalid = resource.errors.include?(:tel) %>

            <% tel_class = "form-control" %>

            <% if was_validated %>
              <% if tel_was_invalid %>
                <% tel_class << " is-invalid" %>
              <% else %>
                <% tel_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :tel %>

            <%= f.text_field :tel, :class => tel_class, :placeholder => "Enter tel" %>

            <% if tel_was_invalid %>
              <% resource.errors.full_messages_for(:tel).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% picture_was_invalid = resource.errors.include?(:picture) %>

            <% picture_class = "form-control" %>

            <% if was_validated %>
              <% if picture_was_invalid %>
                <% picture_class << " is-invalid" %>
              <% else %>
                <% picture_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :picture %>

            <%= f.text_field :picture, :class => picture_class, :placeholder => "Enter picture" %>

            <% if picture_was_invalid %>
              <% resource.errors.full_messages_for(:picture).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "merchants/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
