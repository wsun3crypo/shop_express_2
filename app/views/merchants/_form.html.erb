      <% end %>
    <% end %>

    <%= f.label :tel %>
    <%= f.text_field :tel, class: tel_class, placeholder: "Enter tel" %>
    <% if tel_was_invalid %>
      <% merchant.errors.full_messages_for(:tel).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% picture_class = "form-control" %>
    <% picture_was_invalid = merchant.errors.include?(:picture) %>

    <% if was_validated %>
      <% if picture_was_invalid %>
        <% picture_class << " is-invalid" %>
      <% else %>
        <% picture_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :picture %>
    <%= f.text_field :picture, class: picture_class, placeholder: "Enter picture" %>
    <% if picture_was_invalid %>
      <% merchant.errors.full_messages_for(:picture).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
