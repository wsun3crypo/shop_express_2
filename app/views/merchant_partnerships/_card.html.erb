<div class="card mb-3">
  <h2 class="card-header h4">
    Merchant Partnership #<%= merchant_partnership.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Sender</dt>
      <dd>
        <% if @merchant_partnership.sender.present? %>
          <%= link_to merchant_partnership.sender, merchant_partnership.sender %>
        <% end %>
      </dd>

      <dt>Receiver</dt>
      <dd>
        <% if @merchant_partnership.receiver.present? %>
          <%= link_to merchant_partnership.receiver, merchant_partnership.receiver %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back merchant_partnership, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_merchant_partnership_url(merchant_partnership), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to merchant_partnership, method: :delete, data: { confirm: "Do you really want to delete this merchant_partnership?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(merchant_partnership.updated_at) %> ago
  </div>
</div>
