<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Assigned Coupons

    <a data-toggle="collapse" href="#customer_assigned_coupons_new_form">
      Add assigned coupon
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @customer.assigned_coupons.each do |assigned_coupon| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to assigned_coupon, assigned_coupon %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="customer_assigned_coupons_new_form">
        <%= render partial: "customers/customer_assigned_coupons_new_form" %>
      </div>
    </div>

  </ul>
</div>
