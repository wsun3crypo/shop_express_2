<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Received Many Friends Request

    <a data-toggle="collapse" href="#customer_received_many_friends_request_new_form">
      Add customer friend
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @customer.received_many_friends_request.each do |customer_friend| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to customer_friend, customer_friend %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="customer_received_many_friends_request_new_form">
        <%= render partial: "customers/customer_received_many_friends_request_new_form" %>
      </div>
    </div>

  </ul>
</div>
