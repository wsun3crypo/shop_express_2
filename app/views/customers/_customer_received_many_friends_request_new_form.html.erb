<!-- Form customer_friend start -->
<%= form_with(model: @customer_friend, local: true) do |f| %>
<!-- Form customer_friend end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <%= f.label :sender_id %>

    <!-- Input for sender_id start -->
    <%= f.text_field :sender_id, class: "form-control" %>
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for receiver_id start -->
  <!-- Input for receiver_id start -->
  <%= f.hidden_field :receiver_id, value: @customer.id %>
  <!-- Input for receiver_id end -->
  <!-- Label and input for receiver_id end -->

  <%= f.submit "Create customer friend", class: "btn btn-block btn-outline-secondary" %>
<% end %>
